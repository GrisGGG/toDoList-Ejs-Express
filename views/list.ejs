<!DOCTYPE html>
<html lang="en">
  <!--Includinng the parts of the page-->
  <%- include("head") -%>
  <body>
    <div id="heading">
      <h1><%= listTitle %></h1>
    </div>
    <!-- Looping through the array newListItems, so a new item element will be created-->
    <div class="box">
      <% newListItems.forEach(newItem => { %>
      <div class="item">
        <input type="checkbox" />
        <p name="newItem"><%= newItem %></p>
        <!--  method post to delete the item selected-->
        <form action="/deleteItem" method="POST">
          <button
            class="delete"
            type="submit"
            name="button"
            value="<%= newItem %>"
          >
            X
          </button>
        </form>
      </div>
      <% }) %>
      <!--  method post to create the new item-->
      <form class="item" action="/" method="post">
        <input
          class="insert"
          type="text"
          name="newItem"
          placeholder="Type a New Task"
          autocomplete="off"
          required="true"
        />
        <button class="add" type="submit" name="list" value="<%= listTitle%>">
          +
        </button>
      </form>
    </div>
    <%- include("footer") -%>
  </body>
</html>
